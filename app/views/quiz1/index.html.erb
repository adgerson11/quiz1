<h1>Welcome to my First quiz test</h1>

<%= image_tag ('quiz1.jpg'), :class=> "img_tag" %>

<div clss="col-10 offset-1">
    <h1 class="float-left">Products</h1>
    <hr />
     <!-- Button trigger modal -->
     <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
     Add a Product
     </button> 
</div>

<div class="clear"></div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Product Upload</h5>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <%= simple_form_for '#', url: root_path do |f| %>
            <div class="modal-body">
                <%= f.input :title %>
                <%= f.input :description %>
                <%= f.label :image %>
                <%= f.file_field :avatar %><br>
            </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Upload", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<br />
